# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# OpenRouter AI Configuration (for Edge Functions)
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# AI Therapeutic System Prompts
THERAPEUTIC_SYSTEM_PROMPT=Your base therapeutic system prompt here
MEDICAL_INSIGHTS_PROMPT=Your medical insights generation prompt here
CBT_DBT_FRAMEWORK_PROMPT=Your CBT/DBT framework prompt here

# AI Model Configuration
DEFAULT_AI_MODEL=deepseek/deepseek-r1:free
FALLBACK_MODELS=anthropic/claude-3.5-sonnet:beta,google/gemini-2.0-flash-exp:free

# Development Configuration
NODE_ENV=development
VITE_APP_ENV=development

# Security & Privacy Configuration
ENABLE_PII_SANITIZATION=true
PII_SANITIZATION_LEVEL=balanced  # Options: strict, balanced, minimal
PRESERVE_THERAPEUTIC_CONTEXT=true

# Storage Security Configuration
VITE_ENABLE_STORAGE_LOGGING=true
VITE_DEFAULT_SIGNED_URL_EXPIRY_MINUTES=15  # Options: 5-60 minutes
VITE_MAX_FILE_SIZE_MB=10  # Maximum file size in MB
VITE_ENABLE_FILE_ACCESS_MONITORING=true

# Error Handling & Security Configuration
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_DETAIL_LEVEL=production  # Options: development, production
VITE_SANITIZE_ERROR_MESSAGES=true
VITE_LOG_SECURITY_EVENTS=true

# Edge Function Security Configuration
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
DEFAULT_RATE_LIMIT_PER_MINUTE=60
ENABLE_SECURITY_HEADERS=true

# Rate Limiting Configuration (per function type)
RATE_LIMIT_DELETE_USER_ACCOUNT=5      # Very strict for account deletion
RATE_LIMIT_GUARDIAN_CHAT=10           # Strict for AI interactions
RATE_LIMIT_GENERATE_PERSONAL_INSIGHTS=15
RATE_LIMIT_EXTRACT_DOC_TEXT=20
RATE_LIMIT_CHECK_MODEL_STATUS=100     # Relaxed for status checks
RATE_LIMIT_LOG_AUTH_EVENT=60          # High for authentication events
RATE_LIMIT_CHECK_LOGIN_SECURITY=30    # High for security checks

# Authentication & Session Security Configuration
VITE_SESSION_TIMEOUT_MINUTES=15           # Default session timeout
VITE_SENSITIVE_SESSION_TIMEOUT_MINUTES=5  # Timeout for sensitive operations
VITE_SESSION_WARNING_MINUTES=5            # Warning time before timeout
VITE_SESSION_FINAL_WARNING_MINUTES=1      # Final warning time
VITE_SESSION_CHECK_INTERVAL_SECONDS=30    # How often to check session status

# Failed Login Protection
VITE_FAILED_LOGIN_THRESHOLD=5             # Max failed attempts before lockout
VITE_ACCOUNT_LOCKOUT_MINUTES=30           # Lockout duration
VITE_PROGRESSIVE_DELAY_ENABLED=true       # Enable progressive delays
VITE_CAPTCHA_THRESHOLD=3                  # Failed attempts before CAPTCHA

# Device Fingerprinting & Suspicious Activity
VITE_DEVICE_FINGERPRINTING_ENABLED=true  # Enable device fingerprinting
VITE_SUSPICIOUS_ACTIVITY_THRESHOLD=40     # Risk score threshold for alerts
VITE_GEOLOCATION_TRACKING_ENABLED=true    # Track login locations
VITE_MAX_CONCURRENT_SESSIONS=3            # Maximum active sessions per user

# Two-Factor Authentication (Future)
VITE_TWO_FACTOR_REQUIRED_SENSITIVE=false  # Require 2FA for sensitive operations
VITE_TWO_FACTOR_BACKUP_CODES_COUNT=10     # Number of backup codes to generate

# Security Monitoring
VITE_SECURITY_EVENT_LOGGING=true          # Enable security event logging
VITE_AUTO_SECURITY_ALERTS=true            # Automatically show security alerts
VITE_SECURITY_ALERT_CHECK_INTERVAL=60000  # Check for alerts every 60 seconds